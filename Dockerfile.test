# Dockerfile.test â€” headless browser tests
FROM python:3.9-slim

RUN apt-get update && apt-get install -y --no-install-recommends \
      firefox-esr geckodriver xvfb curl ca-certificates fonts-liberation \
    && rm -rf /var/lib/apt/lists/*

WORKDIR /tests
COPY requirements-test.txt .
RUN pip install --no-cache-dir -r requirements-test.txt

COPY tests/ /tests

# Run your acceptance tests; adjust to your suite
CMD ["pytest", "-q", "--maxfail=1", "-k", "acceptance"]

